<?xml version="1.0" encoding="utf-8"?>

<itbour.onetouchshow.custom.InchingTextOperaPanel
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/text_opera_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:visibility="gone"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#181818"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_inching_text_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_inching_text_content"

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:src="@drawable/ic_default" />

            <TextView
                android:id="@+id/tv_inching_text_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="文本"
                android:textColor="#B5B5B5"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_inching_text_color"
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_inching_text_color"

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:src="@drawable/ic_default" />

            <TextView
                android:id="@+id/tv_inching_text_color"

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="颜色"
                android:textColor="#B5B5B5"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_inching_text_style"
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_inching_text_style"

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:src="@drawable/ic_default" />

            <TextView
                android:id="@+id/tv_inching_text_style"

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="字体"
                android:textColor="#B5B5B5"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_inching_text_type"
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_inching_text_type"

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:src="@drawable/ic_default" />

            <TextView
                android:id="@+id/tv_inching_text_type"

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="样式"
                android:textColor="#B5B5B5"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_inching_text_delete"
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_weight="1"
            android:descendantFocusability="beforeDescendants"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_inching_text_delete"

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:src="@drawable/ic_default" />

            <TextView
                android:id="@+id/tv_inching_text_delete"

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="删除"
                android:textColor="#B5B5B5"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_edit_bar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#000000"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_corner_edit_background"
            android:padding="2dp"
            android:textColor="#ffffff"
            android:textCursorDrawable="@drawable/edit_cursor_blue" />

        <TextView
            android:id="@+id/tv_ensure"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="确定"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_opear_detail_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_on_text"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:background="@color/white"
            ></RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_on_color"
            android:layout_width="match_parent"
            android:layout_height="500px"
            android:background="@color/red"
            android:visibility="gone">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_type"
            android:layout_width="match_parent"
            android:layout_height="700px"
            android:visibility="gone"
            android:background="@color/black"
            ></RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_style"
            android:layout_width="match_parent"
            android:layout_height="400px"
            android:visibility="gone"
            android:background="@color/colorPrimary"
            ></RelativeLayout>
    </RelativeLayout>
</itbour.onetouchshow.custom.InchingTextOperaPanel>